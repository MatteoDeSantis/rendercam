
local LOADER_URL = msg.url("main:/proxies#loader")

function init(self)
	msg.post(".", "acquire_input_focus")
end

function on_input(self, action_id, action)
	if action_id == hash("escape") then
		sys.exit(0)
	elseif action_id == hash("exit scene") then
		msg.post(LOADER_URL, "go to menu")
	end
end
